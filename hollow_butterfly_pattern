import java.util.*;
 
public class Solutions {
   public static void main(String args[]) {
       int n = 4;
        int l=n*2;
        for(int i=1;i<=l;i++){
            for(int j=1;j<=l;j++){
                if (j==1 || j==l || j==i || (i+j==l+1)){
                    System.out.print("*");
                }else{
                    System.out.print(" ");
                }
            }
            System.out.println();
        }
       
   }   
}
